[Unit]
Description=Redis persistent key-value database for <%= @name %>
After=network.target

[Service]
ExecStart=/usr/bin/redis-server <%= @conf_path %>/<%= @name %>_<%= @conf %> --daemonize no --supervised systemd
ExecStop=/usr/libexec/redis-shutdown <%= @name %>
Type=notify
User=<%= @user %>
Group=<%= @group %>
RuntimeDirectory=redis
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target

