[Unit]
Description=Redis Sentinel (<%= @name %>-redis-sentinel)
After=network.target

[Service]
ExecStart=/usr/bin/redis-sentinel <%= @conf_path %>/<%= @name %>_<%= @conf %> --daemonize no --supervised systemd
ExecStop=/usr/libexec/redis-shutdown <%= @name %>-redis-sentinel
Type=notify
user=<%= @user %>
group=<%= @group %>
RuntimeDirectory=redis
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target
