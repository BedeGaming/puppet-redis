[Unit]
Description=Redis Sentinel (<%= @name %>_redis-sentinel)
After=network.target

[Service]
ExecStart=/usr/bin/redis-sentinel <%= @conf_path %>/<%= @name %>_<%= @conf %> --daemonize no --supervised systemd
ExecStop=/usr/libexec/redis-shutdown <%= @name %>_redis-sentinel
Type=notify
User=<%= @user %>
Group=<%= @group %>
RuntimeDirectory=redis
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target
